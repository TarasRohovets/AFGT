        </dt>

        <dd>
            @Html.DisplayFor(model => model.Morada.CodPostal)
        </dd>

        <dt>
            <label class="control-label ">Descrição</label>
            @*@Html.DisplayNameFor(model => model.Descricao)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

