<div class="outer-container">
    <div class="banner" data--200-top="opacity: 1;" data-top-bottom="opacity: 0;">
        <div class="banner__image" data-0="transform: translateY();" data-top-bottom="transform: translateY(300px);"></div>
        <div class="banner__caption">

            <h1>AFGT</h1>
            <p class="lead">AFGT guia-te pelo o que ouves! xD</p>

            @using (Ajax.BeginForm("Index", new AjaxOptions { UpdateTargetId = "resultadosPesquisa" }))
            {
                <div class="row">
                    <div class="col-md-offset-1 col-md-12">
                        <div class="form-group form-inline">

                            @Html.DropDownList("ListaPesquisa", new SelectList(ViewBag.ListaPesquisa, "Value", "Text"), new { @class = "form-control", onchange = @"TipoPesquisa(this.value);" })

                            <input name="ConteudoPesquisa" type="text" class="form-control active" id="Artista" style="width:160px" placeholder="O que procuras?" />

                            @Html.Action("Index", "GeneroMusicals", new { id = ViewBag.GeneroMusicalID })

                            @Html.DropDownList("ListaOpcao", new SelectList(ViewBag.ListaOpcao, "Value", "Text"), new { @class = "form-control", onchange = @"TipoOpcao(this.value);" })

                            @Html.Partial("_Data")

                            @Html.Partial("_Local")

                            <button class="btn btn-default">Ir</button>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>