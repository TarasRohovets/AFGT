<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top custom-navbar">
        <div class="container">
            <div class="navbar-header">
                
                <a href='@Url.Action("Index", "Home")'>
                    <img src="~/Content/Images/afgticon.PNG" style="width: 100px; height: 55px;" />
                </a>
            </div>
            <div class="nav navbar-nav pull-left">
                <a class="navbar-brand">@Html.ActionLink("Leva-me a Concertos!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</a>
                </div>
                <div class="nav navbar-nav pull-right">

                    @*<a class="navbar-brand">@Html.ActionLink("Sign In", "SignIn", "Account", new { area = "" }, new { @class = "navbar-brand" })</a>*@
                    <a class="navbar-brand">@Html.Partial("_LoginPartial")</a>
                </div>

            </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>